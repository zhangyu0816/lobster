<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.zb.lib_base.utils.ObjectUtils" />

        <import type="com.zb.lib_base.model.PairInfo" />

        <variable
            name="viewModel"
            type="com.zb.module_card.vm.CardViewModel" />

        <variable
            name="cardCallback"
            type="com.zb.lib_base.views.card.CardItemTouchHelperCallback&lt;PairInfo>" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_bg_black_efe_radius40"
            android:drawableStart="@mipmap/address_icon"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="温州市"
            android:textColor="@color/black_252"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="15dp"
            app:srcCompat="@mipmap/exposure_icon" />

        <androidx.recyclerview.widget.RecyclerView
            adapter="@{viewModel.adapter}"
            cardCallback="@{cardCallback}"
            recyclerType="@{6}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textView" />

        <ImageView
            android:id="@+id/iv_dislike"
            viewHeightSize="@{ObjectUtils.getViewSizeByHeightFromMax(220)}"
            viewWidthSize="@{ObjectUtils.getViewSizeByWidthFromMax(200)}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:alpha="0"
            android:background="@mipmap/dislike_icon" />

        <ImageView
            android:id="@+id/iv_like"
            viewHeightSize="@{ObjectUtils.getViewSizeByHeightFromMax(220)}"
            viewWidthSize="@{ObjectUtils.getViewSizeByWidthFromMax(200)}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:alpha="0"
            android:background="@mipmap/like_icon" />
    </RelativeLayout>
</layout>