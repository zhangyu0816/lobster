<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.zb.lib_base.utils.ObjectUtils" />

        <import type="android.view.View" />

        <import type="com.zb.lib_base.activity.BaseActivity" />

        <import type="com.zb.lib_base.utils.DateUtil" />

        <variable
            name="viewModel"
            type="com.zb.module_card.vm.MemberDetailViewModel" />

        <variable
            name="isAttention"
            type="boolean" />

        <variable
            name="constellation"
            type="String" />

        <variable
            name="info"
            type="String" />

        <variable
            name="likeType"
            type="Integer" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/top_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <ImageView
                android:id="@+id/iv_back"
                onClickDelayed="@{viewModel::back}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="15dp"
                app:srcCompat="@mipmap/back_black_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="个人资料"
                android:textColor="@color/black_252"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:onClick="@{viewModel::more}"
                android:padding="15dp"
                app:srcCompat="@mipmap/back_more_icon" />
        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/top_relative"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="200dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.app.abby.xbanner.XBanner
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_centerHorizontal="true"
                        android:background="@color/white" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="15dp"
                        android:visibility="@{viewModel.memberInfo.faceAttest==1?View.VISIBLE:View.GONE}"
                        app:srcCompat="@mipmap/real_icon" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp">

                    <TextView
                        android:id="@+id/tv_nick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:background="@{viewModel.memberInfo==null?@drawable/default_bg:@drawable/empty_bg}"
                        android:text="@{viewModel.memberInfo.remark.isEmpty()?viewModel.memberInfo.nick:viewModel.memberInfo.remark}"
                        android:textColor="@color/black_252"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        tools:text="默认仓库" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/tv_nick"
                        android:visibility="@{viewModel.memberInfo.faceAttest==1?View.VISIBLE:View.GONE}"
                        app:srcCompat="@mipmap/real_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="29dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@{isAttention?@drawable/btn_bg_black_c3b_radius60:@drawable/btn_bg_purple_7a4_radius60}"
                        android:gravity="center"
                        android:onClick="@{viewModel::follow}"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:text="@{isAttention?@string/attention_false:@string/attention_true}"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:visibility="@{viewModel.otherUserId==BaseActivity.userId?View.GONE:View.VISIBLE}" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:background="@{viewModel.memberInfo==null?@drawable/default_bg:@drawable/empty_bg}"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@{viewModel.memberInfo.sex==0?@drawable/btn_bg_red_fe5_radius2:@drawable/btn_bg_blue_37a_radius2}"
                        android:paddingStart="7dp"
                        android:paddingTop="2dp"
                        android:paddingEnd="7dp"
                        android:paddingBottom="2dp"
                        android:text="@{String.format(@string/text_age,DateUtil.getAge(viewModel.memberInfo.birthday,viewModel.memberInfo.age))}"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        tools:text="19岁" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:background="@{ObjectUtils.getConstellationBg(constellation)}"
                        android:paddingStart="7dp"
                        android:paddingTop="2dp"
                        android:paddingEnd="7dp"
                        android:paddingBottom="2dp"
                        android:text="@{constellation}"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        tools:text="双子座" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:visibility="@{viewModel.memberInfo.memberType==2?View.VISIBLE:View.GONE}"
                        app:srcCompat="@mipmap/vip_icon" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@{viewModel.memberInfo==null?@drawable/default_bg:@drawable/empty_bg}"
                    android:text="@{String.format(@string/user_id,viewModel.otherUserId)}"
                    android:textColor="@color/black_827"
                    android:textSize="12sp"
                    tools:text="虾菇号：21346" />

                <RelativeLayout
                    android:id="@+id/discover_layout"
                    onClickDelayed="@{viewModel::toDiscoverList}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp">

                    <TextView
                        android:id="@+id/tv_front"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:text="我的动态"
                        android:textColor="@color/black_252"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        adapter="@{viewModel.discoverAdapter}"
                        recyclerType="@{1}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:layout_toStartOf="@+id/iv_arrow"
                        android:layout_toEndOf="@+id/tv_front" />

                    <ImageView
                        android:id="@+id/iv_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/arrow_small_right_icon" />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@{viewModel.memberInfo==null?@drawable/default_bg:@drawable/empty_bg}"
                    android:text="@{info}"
                    android:textColor="@color/black_4d4"
                    android:textSize="14sp"
                    tools:text="13.3K" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="个性签名："
                        android:textColor="@color/black_4d4"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@{viewModel.memberInfo==null?@drawable/default_bg:@drawable/empty_bg}"
                        android:text="@{viewModel.memberInfo.personalitySign.isEmpty()?@string/sign_content:viewModel.memberInfo.personalitySign}"
                        android:textColor="@color/black_4d4"
                        android:textSize="14sp"
                        tools:text="默认仓库" />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical"
                    android:text="个性标签"
                    android:textColor="@color/black_4d4"
                    android:textSize="14sp"
                    android:visibility="@{viewModel.memberInfo.getServiceTags().length() > 0?View.VISIBLE:View.GONE}" />

                <com.zb.lib_base.views.MyRecyclerView
                    adapter="@{viewModel.tagAdapter}"
                    recyclerType="@{5}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:visibility="@{viewModel.memberInfo.getServiceTags().length() > 0?View.VISIBLE:View.GONE}" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <com.zb.lib_base.views.SuperLikeBigView
            android:id="@+id/iv_super_like"
            onClickDelayed="@{viewModel::superLike}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="15dp"
            android:visibility="@{likeType==2?View.GONE:View.VISIBLE}" />

        <ImageView
            android:id="@+id/iv_dislike"
            onClickDelayed="@{viewModel::dislike}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="15dp"
            android:visibility="@{likeType==0?View.VISIBLE:View.GONE}"
            app:srcCompat="@mipmap/dislike_icon" />

        <ImageView
            android:id="@+id/iv_like"
            onClickDelayed="@{viewModel::like}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="15dp"
            android:visibility="@{likeType==0?View.VISIBLE:View.GONE}"
            app:srcCompat="@mipmap/like_icon" />

    </RelativeLayout>

</layout>