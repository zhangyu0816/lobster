<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="com.zb.lib_base.activity.BaseActivity" />

        <variable
            name="viewModel"
            type="com.zb.lib_base.vm.BaseViewModel" />

        <variable
            name="otherUserId"
            type="long" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.app.abby.xbanner.XBanner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@color/black_efe" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                onClickDelayed="@{viewModel::back}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="15dp"
                app:srcCompat="@mipmap/back_white_icon" />

            <TextView
                android:id="@+id/tv_follow"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:layout_toStartOf="@+id/iv_more"
                android:background="@drawable/btn_bg_white_radius60"
                android:gravity="center"
                android:onClick="@{viewModel::follow}"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:text="关注"
                android:textColor="@color/black_4d4"
                android:textSize="13sp"
                android:visibility="@{otherUserId==BaseActivity.userId?View.GONE:View.VISIBLE}" />

            <ImageView
                android:id="@+id/iv_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:onClick="@{viewModel::more}"
                android:padding="15dp"
                app:srcCompat="@mipmap/more_icon" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_super_like"
            onClickDelayed="@{viewModel::superLike}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/banner"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"
            app:srcCompat="@mipmap/super_like_icon" />
    </RelativeLayout>
</layout>