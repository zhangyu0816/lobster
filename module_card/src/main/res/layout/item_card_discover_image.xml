<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.zb.lib_base.utils.ObjectUtils" />

        <variable
            name="item"
            type="com.zb.lib_base.model.DiscoverInfo" />

        <variable
            name="viewModel"
            type="com.zb.module_card.vm.MemberDetailViewModel" />

    </data>

    <ImageView
        onClickDelayed="@{viewModel::toDiscoverList}"
        viewHeightSize="@{ObjectUtils.getViewSizeByWidthFromMax(120)}"
        viewWidthSize="@{ObjectUtils.getViewSizeByWidthFromMax(120)}"
        imageUrl='@{item.images.split(",")[0]}'
        defaultRes="@{ObjectUtils.getDefaultRes()}"
        isRound="@{true}"
        roundSize="@{5}"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"/>
</layout>