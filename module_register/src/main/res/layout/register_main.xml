<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.zb.module_register.vm.MainViewModel" />

        <variable
            name="isThree"
            type="boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:onClick="@{viewModel::changeUrl}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{viewModel::back}"
            android:paddingStart="15dp"
            android:paddingTop="37dp"
            android:text="退出"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="嗨！您的性别为..."
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.25" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <TextView
                android:id="@+id/tv_boy"
                onClickDelayed="@{v->viewModel.selectSex(1)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:drawableTop="@mipmap/boy_icon"
                android:drawablePadding="15dp"
                android:gravity="center"
                android:text="男"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_girl"
                onClickDelayed="@{v->viewModel.selectSex(0)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:drawableTop="@mipmap/girl_icon"
                android:drawablePadding="15dp"
                android:gravity="center"
                android:text="女"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="请完善个人资料"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="@{isThree?View.VISIBLE:View.GONE}"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="@{isThree?View.GONE:View.VISIBLE}"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <LinearLayout
                onClickDelayed="@{viewModel::toLogin}"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="63dp"
                android:layout_marginEnd="63dp"
                android:background="@drawable/btn_bg_white_radius60_90"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:drawableStart="@mipmap/login_by_phone_icon"
                    android:gravity="center"
                    android:text="手机登录"
                    android:textColor="@color/black_252"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                onClickDelayed="@{viewModel::toQQ}"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="63dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="63dp"
                android:background="@drawable/btn_bg_white_radius60_70"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:drawableStart="@mipmap/login_by_qq_icon"
                    android:gravity="center"
                    android:text="QQ登录"
                    android:textColor="@color/black_252"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                onClickDelayed="@{viewModel::toWX}"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="63dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="63dp"
                android:background="@drawable/btn_bg_white_radius60_70"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="48dp"
                    android:drawableStart="@mipmap/login_by_wx_icon"
                    android:gravity="center"
                    android:text="微信登录"
                    android:textColor="@color/black_252"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="@{viewModel::changeUrl}"
            android:paddingBottom="16dp"
            android:text="我们绝不会未经您的许可发布留言"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>