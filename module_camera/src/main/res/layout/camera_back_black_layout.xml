<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.zb.lib_base.utils.ObjectUtils" />

        <variable
            name="viewModel"
            type="com.zb.lib_base.vm.BaseViewModel" />

        <variable
            name="title"
            type="String" />

        <variable
            name="filmType"
            type="Integer" />

    </data>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp">

            <ImageView
                onClickDelayed="@{viewModel::back}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:src="@mipmap/back_black_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@{title}"
                android:textColor="@color/black_252"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                viewWidthSize="@{ObjectUtils.getViewSizeByWidthFromMax(83)}"
                viewHeightSize="@{ObjectUtils.getViewSizeByWidthFromMax(90)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15dp"
                android:visibility="@{filmType==0?View.GONE:View.VISIBLE}"
                tools:background="@{ObjectUtils.getFilmRes(filmType)}" />
        </RelativeLayout>
    </RelativeLayout>
</layout>