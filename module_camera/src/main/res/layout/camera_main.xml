<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.zb.lib_base.utils.ObjectUtils" />

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.zb.module_camera.CameraViewModel" />

        <variable
            name="imageUrl"
            type="String" />

        <variable
            name="title"
            type="String" />

        <variable
            name="showList"
            type="boolean" />

        <variable
            name="isMore"
            type="boolean" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/iv_back"
                onClickDelayed="@{viewModel::back}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:padding="15dp"
                app:srcCompat="@mipmap/back_white_icon" />

            <TextView
                onClickDelayed="@{viewModel::selectTitle}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableEnd="@mipmap/arrow_xia"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:text="@{title}"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                onClickDelayed="@{viewModel::upload}"
                android:layout_width="60dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="20dp"
                android:background="@drawable/btn_bg_purple_7a4_radius60"
                android:gravity="center"
                android:text="上传"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cut_relative"
            viewHeightSize="@{ObjectUtils.getViewSizeByHeight(0.5f)}"
            viewWidthSize="@{ObjectUtils.getViewSizeByWidth(1f)}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relativeLayout">

            <com.zb.lib_base.views.CutImageView
                android:id="@+id/iv_cut"
                viewHeightSize="@{ObjectUtils.getViewSizeByHeight(0.5f)}"
                viewWidthSize="@{ObjectUtils.getViewSizeByWidth(1f)}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:visibility="@{isMore?View.GONE:View.VISIBLE}" />

            <LinearLayout
                android:id="@+id/cut_layout"
                viewHeightSize="@{ObjectUtils.getViewSizeByHeight(0.5f)}"
                viewWidthSize="@{ObjectUtils.getViewSizeByWidth(1f)}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@color/black"
                android:orientation="vertical"
                android:visibility="@{isMore?View.VISIBLE:View.GONE}" />
        </RelativeLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/images_list"
            adapter="@{viewModel.adapter}"
            gridNum="@{4}"
            recyclerType="@{2}"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/cut_relative" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/relativeLayout"
            android:visibility="@{showList?View.VISIBLE:View.GONE}">

            <View
                onClickDelayed="@{viewModel::selectTitle}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:alpha="0.5"
                android:background="@android:color/black" />

            <androidx.recyclerview.widget.RecyclerView
                adapter="@{viewModel.fileAdapter}"
                color="@{ObjectUtils.getLineColor()}"
                recyclerType="@{0}"
                size="@{1}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </RelativeLayout>
</layout>