<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.zb.lib_base.utils.ObjectUtils" />

        <variable
            name="viewModel"
            type="com.zb.module_bottle.vm.BottleThrowViewModel" />

        <variable
            name="title"
            type="String" />

        <variable
            name="noReadNum"
            type="Integer" />

        <variable
            name="bottleInfo"
            type="com.zb.lib_base.model.BottleInfo" />

        <variable
            name="isBottle"
            type="boolean" />

        <variable
            name="showBtn"
            type="boolean" />


    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/bottle_white_back"
            layout="@layout/bottle_white_back"
            title="@{title}"
            viewModel="@{viewModel}" />

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="@{showBtn?View.VISIBLE:View.GONE}">

            <ImageView
                android:id="@+id/imageView3"
                onClickDelayed="@{viewModel::collectBottle}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/throw_bottle_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每天10/10个"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:visibility="@{showBtn?View.VISIBLE:View.GONE}">

            <TextView
                onClickDelayed="@{viewModel::throwBottle}"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:layout_margin="40dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_white_radius60"
                android:gravity="center"
                android:text="扔一个瓶子"
                android:textColor="@color/black_252"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="40dp"
                android:layout_weight="1">

                <TextView
                    onClickDelayed="@{viewModel::myBottle}"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@drawable/btn_bg_white_radius60"
                    android:gravity="center"
                    android:text="我的漂流瓶"
                    android:textColor="@color/black_252"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/circle_red"
                    android:gravity="center"
                    android:text='@{String.format("%d",noReadNum)}'
                    android:textColor="@android:color/white"
                    android:textSize="9sp"
                    android:visibility="@{noReadNum==0?View.GONE:View.VISIBLE}"
                    tools:text="99" />
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/first_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/iv_bg"
                viewHeightSize="@{ObjectUtils.getViewSizeByHeightFromMax(1575)}"
                viewWidthSize="@{ObjectUtils.getViewSizeByWidthFromMax(992)}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@mipmap/bottle_small_bg" />

            <ImageView
                android:id="@+id/iv_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:layout_marginTop="100dp"
                android:background="@mipmap/bottle_star_icon" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{isBottle?View.VISIBLE:View.GONE}">

            <View
                onClickDelayed="@{viewModel::close}"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <LinearLayout
                viewHeightSize="@{-2}"
                viewWidthSize="@{ObjectUtils.getViewSizeByWidthFromMax(980)}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@mipmap/bottle_content_bg"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp">

                    <androidx.recyclerview.widget.RecyclerView
                        adapter="@{viewModel.adapter}"
                        recyclerType="@{5}"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="@{bottleInfo.driftBottleId==0?View.GONE:View.VISIBLE}" />

                    <EditText
                        android:id="@+id/ed_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:gravity="top"
                        android:hint="在这里写下你想说的话...(100字)"
                        android:lineSpacingExtra="10dp"
                        android:maxLength="100"
                        android:maxLines="10"
                        android:minLines="5"
                        android:textColor="@color/black_4d4"
                        android:textColorHint="#C3BDCD"
                        android:textCursorDrawable="@drawable/cursor_color_black_4d4"
                        android:textSize="16sp"
                        android:visibility="@{bottleInfo.driftBottleId==0?View.VISIBLE:View.GONE}" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_sure"
                    onClickDelayed="@{viewModel::sure}"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/gradient_purple_6d5_ae7"
                    android:gravity="center"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:text="@{bottleInfo.driftBottleId==0?@string/bottle_throw:@string/bottle_reply}"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_cancel"
                    onClickDelayed="@{viewModel::cancel}"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/btn_bg_black_e5e_radius60"
                    android:gravity="center"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:text="扔回海里"
                    android:textColor="@color/black_4d4"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="@{bottleInfo.driftBottleId==0?View.GONE:View.VISIBLE}" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
</layout>