<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.zb.module_mine.vm.FeedbackDetailViewModel" />

        <variable
            name="title"
            type="String" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include
                layout="@layout/back_black_layout"
                showRight="@{false}"
                title="@{title}"
                viewModel="@{viewModel}" />

            <TextView
                onClickDelayed="@{viewModel::submit}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="22dp"
                android:padding="15dp"
                android:text="提交"
                android:textColor="@color/black_252"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="@{viewModel.feedbackInfo.id==0?View.VISIBLE:View.GONE}" />
        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/ed_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="@drawable/btn_bg_white_black_efe_radius5"
                    android:gravity="top"
                    android:hint="输入反馈标题"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:text="@={viewModel.feedbackInfo.title}"
                    android:textColor="@color/black_252"
                    android:textColorHint="#C3BDCD"
                    android:textCursorDrawable="@drawable/cursor_color_black_4d4"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/ed_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/btn_bg_white_black_efe_radius5"
                    android:gravity="top"
                    android:hint="输入反馈内容"
                    android:lines="8"
                    android:padding="15dp"
                    android:text="@={viewModel.feedbackInfo.content}"
                    android:textColor="@color/black_252"
                    android:textColorHint="#C3BDCD"
                    android:textCursorDrawable="@drawable/cursor_color_black_4d4"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="图片证据（必填）"
                    android:textColor="@color/black_252"
                    android:textSize="14sp" />

                <com.zb.lib_base.views.MyRecyclerView
                    adapter="@{viewModel.adapter}"
                    gridNum="@{3}"
                    recyclerType="@{2}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="@{viewModel.feedbackInfo.id==0?View.GONE:View.VISIBLE}">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="回复"
                        android:textColor="@color/black_252"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.feedbackInfo.replyContent}"
                        tools:text="说服客户为为开发完了 "
                        android:background="@drawable/btn_bg_white_black_efe_radius5"
                        android:padding="15dp"
                        android:layout_margin="15dp"
                        android:textColor="@color/black_252"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>