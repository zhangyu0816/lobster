<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.zb.lib_base.utils.ObjectUtils" />

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.zb.module_mine.vm.OpenVipViewModel" />

        <variable
            name="vipInfo"
            type="com.zb.lib_base.model.VipInfo" />

        <variable
            name="mineInfo"
            type="com.zb.lib_base.model.MineInfo" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/vip_bg">

        <RelativeLayout
            android:id="@+id/top_relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp">

            <ImageView
                onClickDelayed="@{viewModel::back}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                app:srcCompat="@mipmap/back_white_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="我的权益"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_above="@+id/bottom_layout"
            android:layout_below="@+id/top_relative"
            android:layout_centerHorizontal="true"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    viewHeightSize="@{ObjectUtils.getVipIntroBgHeight(0.95f)}"
                    viewWidthSize="@{ObjectUtils.getViewSizeByWidth(0.95f)}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:background="@mipmap/vip_intro_bg_icon">

                    <RelativeLayout
                        android:id="@+id/image_relative"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <View
                            viewHeightSize="@{ObjectUtils.getViewSizeByWidth(0.24f)}"
                            viewWidthSize="@{ObjectUtils.getViewSizeByWidth(0.24f)}"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@mipmap/vip_intro_light_icon" />

                        <View
                            viewHeightSize="@{ObjectUtils.getViewSizeByWidth(0.15f)}"
                            viewWidthSize="@{ObjectUtils.getViewSizeByWidth(0.15f)}"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/circle_white" />

                        <ImageView
                            defaultRes="@{ObjectUtils.getDefaultRes()}"
                            imageUrl="@{mineInfo.image}"
                            isCircle="@{true}"
                            viewHeightSize="@{ObjectUtils.getViewSizeByWidth(0.14f)}"
                            viewWidthSize="@{ObjectUtils.getViewSizeByWidth(0.14f)}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_nick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="15dp"
                        android:layout_toStartOf="@+id/tv_open"
                        android:layout_toEndOf="@+id/image_relative"
                        android:text="@{String.format(@string/member_nick, mineInfo.nick)}"
                        android:textColor="@android:color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:text="你好！租我吧租我吧租我吧租我吧租我吧" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_nick"
                        android:layout_marginTop="10dp"
                        android:layout_toStartOf="@+id/tv_open"
                        android:layout_toEndOf="@+id/image_relative"
                        android:text='@{mineInfo.memberType==2?(mineInfo.memberExpireTime.empty ?"" : String.format(@string/member_expire_time, mineInfo.memberExpireTime.substring(0,10))):@string/vip_intro}'
                        android:textColor="#b0ffffff"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_open"
                        onClickDelayed="@{v->viewModel.getVip(1)}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="15dp"
                        android:background="@mipmap/open_bg"
                        android:gravity="center"
                        android:text="@{mineInfo.memberType==2?@string/tv_renew:@string/tv_open}"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="@string/tv_renew"/>
                </RelativeLayout>

                <ImageView
                    viewHeightSize="@{ObjectUtils.getVipIntroHeight()}"
                    viewWidthSize="@{-1}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-70dp"
                    android:background="@drawable/vip_intro_icon"
                    android:scrollbars="vertical" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <RelativeLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-10dp"
            android:background="@color/white">

            <TextView
                onClickDelayed="@{v->viewModel.getVip(1)}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/btn_bg_icon"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:text="@{mineInfo.memberType==2?@string/pay_btn:String.format(@string/open_btn,vipInfo.price)}"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="开通" />
        </RelativeLayout>

    </RelativeLayout>
</layout>