<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.zb.lib_base.model.JobInfo" />

        <variable
            name="isSelect"
            type="boolean" />

        <variable
            name="position"
            type="Integer" />

        <variable
            name="viewModel"
            type="com.zb.module_mine.vm.SelectJobViewModel" />


    </data>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:background="@{isSelect?@drawable/btn_bg_purple_7a4_radius60:@drawable/btn_bg_black_efe_radius40}"
            android:gravity="center"
            android:onClick="@{v->viewModel.selectJob(position)}"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:text="@{item.job}"
            android:textColor="@{isSelect?@android:color/white:@color/black_827}"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="是为谔谔分" />
    </RelativeLayout>

</layout>