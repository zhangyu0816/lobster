<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.zb.module_mine.vm.ModifyPassViewModel" />

        <variable
            name="title"
            type="String" />

        <variable
            name="oldPass"
            type="String" />

        <variable
            name="newPass"
            type="String" />

        <variable
            name="surePass"
            type="String" />

        <variable
            name="showNewPass"
            type="boolean" />

        <variable
            name="showSurePass"
            type="boolean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/back_black_layout"
            showRight="@{false}"
            title="@{title}"
            viewModel="@{viewModel}" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/btn_bg_black_efe_radius10"
            android:hint="输入旧密码"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:singleLine="true"
            android:text="@={oldPass}"
            android:textColorHint="@color/black_c3b"
            android:textCursorDrawable="@drawable/cursor_color_black_252"
            android:textSize="14sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/btn_bg_black_efe_radius10">

            <EditText
                android:id="@+id/ed_new"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:background="@null"
                android:hint="输入新密码"
                android:inputType="textPassword"
                android:maxLength="20"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:singleLine="true"
                android:text="@={newPass}"
                android:textColorHint="@color/black_c3b"
                android:textCursorDrawable="@drawable/cursor_color_black_252"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:onClick="@{v->viewModel.select(1)}"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:src="@{showNewPass?@drawable/eye_open:@drawable/eye_close}" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/btn_bg_black_efe_radius10">

            <EditText
                android:id="@+id/ed_sure"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:background="@null"
                android:hint="确认密码"
                android:inputType="textPassword"
                android:maxLength="20"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:singleLine="true"
                android:text="@={surePass}"
                android:textColorHint="@color/black_c3b"
                android:textCursorDrawable="@drawable/cursor_color_black_252"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:onClick="@{v->viewModel.select(2)}"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:src="@{showSurePass?@drawable/eye_open:@drawable/eye_close}" />
        </RelativeLayout>

        <TextView
            onClickDelayed="@{viewModel::modify}"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="15dp"
            android:background="@drawable/gradient_purple_6d5_ae7"
            android:gravity="center"
            android:text="确定修改"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</layout>