<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.zb.lib_base.utils.ObjectUtils" />

        <variable
            name="item"
            type="String" />

        <variable
            name="position"
            type="Integer" />

        <variable
            name="viewModel"
            type="com.zb.lib_base.vm.BaseViewModel" />
    </data>

    <ImageView
        defaultRes="@{ObjectUtils.getDefaultRes()}"
        imageUrl="@{item}"
        isRound="@{true}"
        onClickDelayed="@{v->viewModel.selectPosition(position)}"
        roundSize="@{7}"
        viewHeightSize="@{ObjectUtils.getViewSizeByWidth(0.3f)}"
        viewWidthSize="@{ObjectUtils.getViewSizeByWidth(0.3f)}"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop" />

</layout>