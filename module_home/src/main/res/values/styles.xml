<resources>

    <!-- Base application theme. -->
    <style name="HomeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="HomeVideoTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowBackground">@color/black_252</item>
        <item name="colorPrimaryDark">@color/black_252</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="HomeGreyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowBackground">@color/black_efe</item>
        <item name="colorPrimaryDark">@color/black_efe</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>
