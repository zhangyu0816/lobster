<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 若不设置 gravity 则默认是居左显示，需要设置为水平居中显示 -->
    <item
        android:width="10dp"
        android:height="3dp"
        android:gravity="center_horizontal">
        <shape>
            <corners android:radius="3dp" />
        </shape>
    </item>
</layer-list>