<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="com.zb.lib_base.utils.ObjectUtils" />

        <variable
            name="pw"
            type="com.zb.lib_base.windows.BasePopupWindow" />

        <variable
            name="adapter"
            type="com.zb.module_home.HomeAdapter" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.5"
            android:background="@android:color/black" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                adapter="@{adapter}"
                color="@{ObjectUtils.getLineColor()}"
                recyclerType="@{0}"
                size="@{1}"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_line"
                android:background="@drawable/btn_bg_white_radius_top10" />

            <TextView
                android:id="@+id/tv_line"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_above="@+id/tv_cancel"
                android:background="#f5f5f5" />

            <TextView
                android:id="@+id/tv_cancel"
                onClickDelayed="@{pw::cancel}"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_alignParentBottom="true"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="取消"
                android:textColor="#333"
                android:textSize="16sp" />
        </RelativeLayout>
    </RelativeLayout>
</layout>