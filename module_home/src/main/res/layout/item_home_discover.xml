<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.zb.lib_base.utils.ObjectUtils" />

        <variable
            name="item"
            type="com.zb.lib_base.model.DiscoverInfo" />

        <variable
            name="position"
            type="Integer" />

        <variable
            name="viewModel"
            type="com.zb.lib_base.vm.BaseViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        onClickDelayed="@{v->viewModel.clickItem(item)}"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/roundImageView"
            defaultRes="@{ObjectUtils.getDefaultRes()}"
            imageUrl='@{item.images.split(",")[0]}'
            viewHeightSize="@{ObjectUtils.getViewSizeByWidth(0.498f)}"
            viewWidthSize="@{ObjectUtils.getViewSizeByWidth(0.498f)}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:background="@drawable/btn_bg_white_radius_bottom5"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/roundImageView">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{item.friendTitle}"
                android:textColor="@color/black_252"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@{item.text}"
                android:textColor="@color/black_4d4"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/iv_logo"
                    defaultRes="@{ObjectUtils.getDefaultRes()}"
                    imageUrl="@{item.image}"
                    isCircle="@{true}"
                    viewHeightSize="@{ObjectUtils.getViewSizeByWidth(0.05f)}"
                    viewWidthSize="@{ObjectUtils.getViewSizeByWidth(0.05f)}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/iv_logo"
                    android:text="@{item.nick}"
                    android:textColor="@color/black_827"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:drawableStart="@{viewModel.goodDb.hasGood(item.friendDynId)?@drawable/like_red_icon:@drawable/like_grey_icon}"
                    android:drawablePadding="5dp"
                    android:text='@{String.format("%d",item.goodNum)}'
                    android:textColor="@color/black_827"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>